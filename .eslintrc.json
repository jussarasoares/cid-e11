{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": ["./tsconfig.json"],
        "sourceType": "module"
    },
    "plugins": [
      "react", 
      "react-hooks",
      "@typescript-eslint",
      "prettier"
    ],
    "ignorePatterns": ["node_modules", "public", "dist", "coverage"],
    "globals": {
        "JSX": true,
        "NodeJS": true
    }
}
